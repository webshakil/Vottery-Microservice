UPLOAD_DESTINATION=uploads/

# External Services
EMAIL_SERVICE_URL=https://api.sendgrid.com
SMS_SERVICE_URL=https://api.twilio.com
NOTIFICATION_SERVICE_URL=http://localhost:3006

# Subscription Limits
FREE_ELECTIONS_PER_MONTH=3
FREE_VOTERS_PER_ELECTION=50
FREE_STORAGE_MB=100
FREE_API_CALLS_PER_HOUR=100

# Security Headers
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=90

# Threshold Cryptography
THRESHOLD_MINIMUM_SHARES=3
THRESHOLD_TOTAL_SHARES=5

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD_MS=1000